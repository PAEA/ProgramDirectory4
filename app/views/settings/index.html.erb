    $("label:contains('(field)')").click(function(){
        $(this).find('> span').toggleClass("arrowup");
        console.log("arrow up");
    });

    if ($(window).width() < 768) {
        $("#collapseAllFilters").removeClass("in");
    } else {
        $("#collapseAllFilters").addClass("in");
    }

