<% if @edit || @approve%>
  <form action="/save_changes">
<% end %>

<div class="row">
  <div class="overlay col-md-10 col-md-offset-1">
    <div class="information-page" id="<%= @program.id %>">

      <h1 class="info-hed"><%= @program.program %></h1> <%= link_to( "VIEW" , {:controller => 'programs', :action => 'information', :id => params[:id] }, :class => "btn navbar-btn btn-inverse" ) %> <%= link_to( "EDIT" , {:controller => 'programs', :action => 'information', :id => params[:id] , :edit => true }, :class => "btn navbar-btn btn-inverse" ) %>

      <% this_section = "" %>

      <% @fields_to_display.each do |f| %>

        <% if ( this_section != f.section_name ) %>
          <% if ( this_section != "" ) %>
            </div>
            </div>
          <% end %>
          <% section_name_trimmed = f.section_name.gsub(/[^a-zA-Z]/, "").downcase %>
          <div style="display: table;">
            <div style="display: table-cell; width: 100%;">
            <a class="btn btn-lg btn-primary btn-header collapsed" role="button" data-toggle="collapse" href="#collapse_<%= section_name_trimmed %>" aria-expanded="false" aria-controls="collapse_<%= f.section_name.gsub(/[^a-zA-Z]/, "").downcase %>">
              <span class="glyphicon glyphicon-menu-down nodisplay"></span> <%= f.section_name %>
            </a>
            </div>
            <div style="display: table-cell; width: 5%; padding-left: 10px;">
            <% if @edit %>
              <%= submit_tag("SAVE", class: 'btn btn-lg btn-inverse', id: 'save-button', style: "padding: 10px 16px 10px 16px; margin-top: 20px; font-size: 20px;") %>
            <% end %>
            </div>
          </div>
          <!-- opening divs -->
          <div class="collapse" id="collapse_<%= f.section_name.gsub(/[^a-zA-Z]/, "").downcase %>">
            <div class="info-well">
              <% this_section = f.section_name %>
        <% end %>

        <%= display_fields_and_tables(f, @edit) %>

      <% end %>

      <!-- closing divs -->
      </div>
      </div>

    </div>

    <!-- Back to index.html -->
    <p><%= link_to( 'Show all schools' , {:action => 'index'}, :class => 'btn btn-primary btn-sm' ) %></p>
  </div>
</div>

<% if @edit || @approve %>
  </form>
<% end %>

<script>
$(document).ready(function(){

  <% @fields_to_display.each do |f| %>
    <% if ( f.content_type == 'field' ) %>
      $("#new-<%= f.id %>").hide();
      $("#success-<%= f.id %>").click(function(){
          $("#current-<%= f.id %>").hide();
          $("#proposal-<%= f.id %>").hide();
          <% if f.field_value_temp != "(((DELETE)))" %>
            $("#new-<%= f.id %>").fadeIn('slow');
          <% else %>
            $("#new-<%= f.id %>").hide();
          <% end %>
          $.ajax("/approve_change/<%= @id %>/<%= f.id %>/<%= f.field_type %>");
      });
      $("#reject-<%= f.id %>").click(function(){
          $("#current-<%= f.id %>").fadeIn('slow');
          $("#proposal-<%= f.id %>").fadeOut('slow');
          $.ajax("/reject_change/<%= @id %>/<%= f.id %>/<%= f.field_type %>");
      });
    <% end %>
  <% end %>
});
</script>
